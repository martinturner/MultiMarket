<h1>Listing Businesses</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Type</th>
      <th>Address</th>
      <th>Contact number</th>
      <th>Branch location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.company_name %></td>
        <td><%= business.type %></td>
        <td><%= business.address %></td>
        <td><%= business.contact_number %></td>
        <td><%= business.branch_location %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

